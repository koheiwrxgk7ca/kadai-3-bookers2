<h1>New book</h1>
 <%= form_with model: @booknew do |f| %>
   <h4>Title</h4>
    <%= f.text_field :title %>
   <h4>Opinion</h4>
    <%= f.text_area :body %>
   <%= f.submit 'Create Book' %>
<% end %>

<h1>Book detail</h1>
<table>
<tr>
   <td>
      <%= image_tag @book.user.get_profile_image(100,100) %>
      <%= @book.user.name %>
   </td>
   <td>
      <%= @book.title %>
   </td>
   <td>
      <%= @book.body %>
   </td>
   <td>
      <% if @book.user == current_user %>
       <%= link_to "Edit", edit_book_path %>
      <% end %>
   </td>
   <td>
      <% if @book.user == current_user %>
       <%= link_to "Destroy", book_path(@book), method: :delete %>
      <% end %>
   </td>
</tr>
</table>

