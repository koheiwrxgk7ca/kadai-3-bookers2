<h1>New book</h1>
 <%= form_with model: @booknew do |f| %>
   <h4>Title</h4>
    <%= f.text_field :title %>
   <h4>Opinion</h4>
    <%= f.text_area :body %>
   <%= f.submit 'Create Book' %>
<% end %>

<h1>Book detail</h1>
<table>
<tr>
   <td>
     <%= image_tag 'no_image.jpg' %>
     <%= @book.user.name %>
   </td>
   <td>
      <%= @book.title  %>
   </td>
   <td>
      <%= @book.body %>
   </td>
   <td>
     Edit
   </td>
   <td>
     Destroy
   </td>
</tr>
</table>

